{
    "display_information": {
        "name": "Knowledge Bot",
        "description": "A bot that answers questions using Vertex AI Search grounded in Google Drive."
    },
    "features": {
        "bot_user": {
            "display_name": "KnowledgeBot",
            "always_online": true
        }
    },
    "oauth_config": {
        "scopes": {
            "bot": [
                "app_mentions:read",
                "chat:write",
                "files:read"
            ]
        }
    },
    "settings": {
        "event_subscriptions": {
            "request_url": "https://us-central1-frcllm-37cab.cloudfunctions.net/slackEvents",
            "bot_events": [
                "app_mention"
            ]
        },
        "org_deploy_enabled": false,
        "socket_mode_enabled": false,
        "token_rotation_enabled": false
    }
}