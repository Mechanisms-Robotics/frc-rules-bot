{
  "name": "functions",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "files:list": "ts-node src/tools/manageFiles.ts list",
    "files:delete": "ts-node src/tools/manageFiles.ts delete",
    "sync-docs": "ts-node src/tools/syncDocs.ts",
    "sync-and-deploy": "yarn sync-docs && yarn deploy"
  },
  "engines": {
    "node": "22"
  },
  "main": "lib/index.js",
  "dependencies": {
    "@google-cloud/discoveryengine": "^2.5.0",
    "@google/generative-ai": "^0.24.1",
    "@slack/bolt": "^3.17.0",
    "dotenv": "^17.2.3",
    "firebase-admin": "^12.0.0",
    "firebase-functions": "^4.6.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "firebase-functions-test": "^3.1.0",
    "firebase-tools": "^15.2.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.0.0"
  },
  "private": true
}
